{
	"include": [
		"src/**/*",
		"resources/**/*",
		"index.js"
	],
	"compilerOptions": {
	  "allowJs": true,
	  // Generate d.ts files
	  "declaration": true,
	  // This compiler run should
	  // only output d.ts files
	  "emitDeclarationOnly": true,
	  // go to js file when using IDE functions like
	  // "Go to Definition" in VSCode
	  "declarationMap": true
	}
  }
